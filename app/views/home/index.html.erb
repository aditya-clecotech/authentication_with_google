<h1 class = "text-center mt-2">HOME</h1><hr>

<% if user_signed_in? %>
   <%= link_to "View Posts", posts_path, class: "btn btn-primary my-3" %>
   <%= button_to "SignOut", destroy_user_session_path, method: :delete, class: "btn btn-danger" %>
<% else %>
   <%= link_to "Login", new_user_session_path, class: "btn btn-primary m-2" %>
   <%= button_to user_google_oauth2_omniauth_authorize_path, method: :post, data: { turbo: "false" }, class: "btn btn-primary ms-2 d-flex align-items-center" do %>
      <%= image_tag('ggl.webp', alt: 'Google Logo', class: 'me-2', width: 20, height: 20) %>
         Login with Google
   <% end %>
<% end %>